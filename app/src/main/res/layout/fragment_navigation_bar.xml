<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context=".NavigationBar">

    <ImageButton
        android:id="@+id/navigation_bar_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/home_button_blue" />
    <ImageButton
        android:id="@+id/navigation_bar_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/profile_button_blue"/>
    <ImageButton
        android:id="@+id/navigation_bar_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/play_button_blue"/>
    <ImageButton
        android:id="@+id/navigation_bar_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/settings_button_blue"/>
</LinearLayout>